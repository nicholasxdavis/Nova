{
  "manifest_version": 3,
  "name": "Nova — PNG Converter.",
  "version": "1.0.1",
  "description": "Convert WebP/AVIF/SVG And GIF files into PNG/JPG Or JPEG format all without the extra hassle. fast, reliable and no ads. — Works without internet access.",
  "icons": {
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"  
  },
  "action": {
    "default_icon": {
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    },
    "default_title": "WebP to PNG Converter",
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_icon": {
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    },
    "default_popup": "index.html"
  }
}
